<form id="actualizar" action="/edit_user/<%= @id_usuario %>" method="POST">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
  <% flash[:error].each do |mensaje| %>
    <p class="text-danger"><%= mensaje %></p>
  <% end %>
  <% end %>
  <div class="form-group">
    <label>Nombre</label>
    <textarea name="usuario[nombreUsuario]" class="form-control"><%=h @query.nombreUsuario %></textarea>
  </div>
  <div class="form-group">
    <label>CÃ©dula</label>
    <textarea name="usuario[cedulaUsuario]" class="form-control"><%=h @query.cedulaUsuario %></textarea>
  </div>
  <div class="form-group">
  <label>Rol</label>
  <select name="usuario[nivelAcceso]" class="form-control">
  <option value="">Seleccione nivel de acceso</option>
  <% ['Admin', 'Recepcionista'].each do |rol| %>
  <option <%= "selected" if rol == @query.nivelAcceso %> value="<%= rol %>"><%= rol %></option>
  <% end %>
  </select>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/users" class="btn btn-default">Cancelar</a>
</form>
