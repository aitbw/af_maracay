<form id="actualizar" action="/<%= @id_profesor %>/edit_bank_account/<%= @id_cuenta %>" method="POST">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
  <% flash[:error].each do |mensaje| %>
    <p class="text-danger"><%= mensaje %></p>
  <% end %>
  <% end %>
  <div class="form-group">
  <label>Banco</label>
  <select name="cuenta[idBanco]" class="form-control">
    <% @bank.each do |bank| %>
    <option <%= "selected" if bank.idBanco == @cuenta.idBanco %> value="<%= bank.idBanco %>"><%= bank.nombreBanco %></option>
    <% end %>
  </select>
  </div>
  <div class="form-group">
    <label>NÃºmero de cuenta</label>
    <textarea name="cuenta[numeroCuenta]" class="form-control"><%=h @cuenta.numeroCuenta %></textarea>
  </div>
  <div class="form-group">
  <label>Tipo de cuenta</label>
  <select name="cuenta[tipoCuenta]" class="form-control">
    <% if @cuenta.tipoCuenta == "Ahorro" %>
    <option value="Ahorro" selected>Ahorro</option>
    <option value="Corriente">Corriente</option>
    <% else %>
    <option value="Ahorro">Ahorro</option>
    <option value="Corriente" selected>Corriente</option>
    <% end %>
  </select>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/teachers/bank_accounts/<%= @id_profesor %>" class="btn btn-default">Cancelar</a>
</form>
