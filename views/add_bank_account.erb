<div class="row">
  <form id="registro" action="/dashboard/teachers/add_bank_account" method="POST">
    <fieldset>
      <legend>Asignar cuenta bancaria</legend>
        <% if flash[:notice] %>
          <p class="notice"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:error] %>
          <p class="error"><%= flash[:error] %></p>
        <% end %>
        <label>Profesor</label>
          <select name="profesor">
            <% @teachers.each do |teacher| %>
            <option value="<%= teacher.idProfesor %>"><%= teacher.nombreProfesor %></option>
            <% end %>
          </select>
        <label>Banco</label>
          <select name="banco">
            <% @banks.each do |bank| %>
            <option value="<%= bank.idBanco %>"><%= bank.nombreBanco %></option>
            <% end %>
          </select>
        <label>NÃºmero de cuenta</label>
          <input type="text" name="numero">
        <label>Tipo de cuenta</label>
          <select name="tipo">
            <option value="Ahorro">Ahorro</option>
            <option value="Corriente">Corriente</option>
          </select>
        <input type="submit" id="registerButton" class="button small" value="Asignar cuenta">
    </fieldset>
  </form>
</div>
