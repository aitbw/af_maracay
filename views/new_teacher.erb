<form id="registro" action="/dashboard/teachers/new_teacher" method="POST">
  <% if flash[:error] %>
  <% flash[:error].each do |mensaje| %>
    <p class="text-danger"><%= mensaje %></p>
  <% end %>
  <% end %>
  <div class="form-group">
    <label>Nombre</label>
    <input type="text" class="form-control" name="profesor[nombreProfesor]" placeholder="Nombre">
  </div>
  <div class="form-group">
    <label>Correo</label>
    <input type="email" class="form-control" name="profesor[correoProfesor]" placeholder="Correo">
  </div>
  <div class="form-group">
    <label>Teléfono</label>
    <input type="text" class="form-control" name="profesor[telefonoProfesor]" placeholder="XXXX-XXXXXXX">
  </div>
  <div class="form-group">
    <label>Cédula</label>
    <input type="text" class="form-control" name="profesor[cedulaProfesor]" placeholder="Cédula">
  </div>
  <div class="form-group">
    <label>Fecha de ingreso</label>
    <div class="input-group date" id="fechaind">
      <input type="text" class="form-control" name="profesor[fechaIngreso]">
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Registrar profesor</button>
  <a href="/dashboard/teachers" class="btn btn-default">Cancelar</a>
</form>
