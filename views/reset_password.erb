<form id="reset_password" action="/reset_password/<%= @id_usuario %>" method="POST">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="text-danger"><%= flash[:error] %></p>
  <% end %>
  <div class="form-group">
    <label>Nueva contraseña</label>
    <input type="password" class="form-control" name="password" placeholder="Nueva contraseña">
  </div>
  <div class="form-group">
    <label>Confirmar contraseña</label>
    <input type="password" class="form-control" name="confirm" placeholder="Confirmar nueva contraseña">
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Reestablecer contraseña</button>
  <a href="/dashboard/users" class="btn btn-default">Cancelar</a>
</form>
