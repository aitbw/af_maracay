<form action="/dashboard/teachers/<%= @teacher.teacher_id %>/edit" method="POST">
  <div class="form-group">
    <label>Cédula</label>
    <input type="text" name="teacher[teacher_cedula]" class="form-control" value="<%= @teacher.teacher_cedula %>"></input>
  </div>

  <div class="form-group">
    <label>Nombre</label>
    <input type="text" name="teacher[teacher_name]" class="form-control" value="<%= h(@teacher.teacher_name) %>"></input>
  </div>

  <div class="form-group">
    <label>Teléfono</label>
    <input type="text" name="teacher[teacher_phone]" class="form-control" value="<%= @teacher.teacher_phone %>"></input>
  </div>

  <div class="form-group">
    <label>Correo</label>
    <input type="email" name="teacher[teacher_email]" class="form-control" value="<%= @teacher.teacher_email %>"></input>
  </div>

  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/teachers" class="btn btn-default">Cancelar</a>
</form>
