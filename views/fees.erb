<h3 align="center" style="padding-bottom:1%;">Cuotas — <%= h(@student.student_name) %></h3>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col">Emisor</th>
      <th scope="col">Monto cancelado</th>
      <th scope="col">Método de pago</th>
      <th scope="col">Estado</th>
      <th scope="col">Fecha de emisión</th>
      <th scope="col">Fecha de expiración</th>
      <th scope="col">Banco</th>
      <th scope="col">Número de referencia</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= h(fee.user_name) %></td>
        <td><%= fee.payment_amount %> BsF.</td>
        <td><%= fee.payment_method %></td>
        <td><%= fee.payment_status %></td>
        <td><%= fee.issue_date.strftime('%d/%m/%Y') %></td>
        <td><%= fee.expiration_date.strftime('%d/%m/%Y') %></td>
        <td><%= fee.bank.empty? ? "N/A" : "<%= fee.bank %>" %></td>
        <td><%= fee.payment_method == 'Efectivo' ? "N/A" : "<%= h(fee.reference_number) %>" %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones<span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/dashboard/students/<%= fee.student_id %>/fees/<%= fee.payment_id %>/delete">Eliminar</a></li>
              <li><a href="/dashboard/students/<%= fee.student_id %>/fees/<%= fee.payment_id %>/edit">Modificar</a></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @fees.size > 10 %>
  <div class="pagination">
    <%= will_paginate @fees, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  </div>
<% end %>

<% if @fees.empty? || Date.today >= @fees.first.expiration_date %>
  <a href="/dashboard/students/<%= @student.student_id %>/fees/new" class="btn btn-success">Nueva cuota</a>
<% end %>
<a href="/dashboard/students" class="btn btn-default">Atrás</a>
