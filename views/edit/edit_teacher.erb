<form action="/dashboard/teachers/<%= @teacher.teacher_id %>/edit" method="POST">
  <div class="form-group">
    <label>Nombre</label>
    <textarea name="teacher[teacher_name]" class="form-control"><%=h @teacher.teacher_name %></textarea>
  </div>
  <div class="form-group">
    <label>Correo</label>
    <textarea name="teacher[teacher_email]" class="form-control"><%= @teacher.teacher_email %></textarea>
  </div>
  <div class="form-group">
    <label>Teléfono</label>
    <textarea name="teacher[teacher_phone]" class="form-control"><%= @teacher.teacher_phone %></textarea>
  </div>
  <div class="form-group">
    <label>Cédula</label>
    <textarea name="teacher[teacher_cedula]" class="form-control"><%= @teacher.teacher_cedula %></textarea>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/teachers" class="btn btn-default">Cancelar</a>
</form>
