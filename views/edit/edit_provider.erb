<form action="/dashboard/providers/<%= @provider.provider_id %>/edit" method="POST">
  <div class="form-group">
    <label>Nombre</label>
    <textarea name="provider[provider_name]" class="form-control"><%= h(@provider.provider_name) %></textarea>
  </div>
  <div class="form-group">
    <label>RIF</label>
    <textarea name="provider[provider_rif]" class="form-control"><%= @provider.provider_rif %></textarea>
  </div>
  <div class="form-group">
    <label>Tel√©fono</label>
    <textarea name="provider[provider_phone]" class="form-control"><%= @provider.provider_phone %></textarea>
  </div>
  <div class="form-group">
    <label>Correo</label>
    <textarea name="provider[provider_email]" class="form-control"><%= @provider.provider_email %></textarea>
  </div>
  <div class="form-group">
    <label>Encargado</label>
    <textarea name="provider[manager]" class="form-control"><%= h(@provider.manager) %></textarea>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/providers" class="btn btn-default">Cancelar</a>
</form>
