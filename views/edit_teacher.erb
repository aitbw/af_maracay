<form id="actualizar" action="/edit_teacher/<%= @id_profesor %>" method="POST">
  <div class="form-group">
    <label>Nombre</label>
    <textarea name="profesor[nombreProfesor]" class="form-control"><%=h @query.nombreProfesor %></textarea>
  </div>
  <div class="form-group">
    <label>Correo</label>
    <textarea name="profesor[correoProfesor]" class="form-control"><%=h @query.correoProfesor %></textarea>
  </div>
  <div class="form-group">
    <label>Teléfono</label>
    <textarea name="profesor[telefonoProfesor]" class="form-control"><%=h @query.telefonoProfesor %></textarea>
  </div>
  <div class="form-group">
    <label>Cédula</label>
    <textarea name="profesor[cedulaProfesor]" class="form-control"><%=h @query.cedulaProfesor %></textarea>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/teachers" class="btn btn-default">Cancelar</a>
</form>
