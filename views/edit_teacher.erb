<form id="actualizar" action="/edit_teacher/<%= @id_profesor %>" method="POST">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="text-danger"><%= flash[:error] %></p>
  <% end %>
  <div class="form-group">
    <label>Nombre</label>
    <textarea name="nombre" class="form-control"><%= @teacher.nombreProfesor %></textarea>
  </div>
  <div class="form-group">
    <label>Correo</label>
    <textarea name="correo" class="form-control"><%= @teacher.correoProfesor %></textarea>
  </div>
  <div class="form-group">
    <label>Teléfono</label>
    <textarea name="telefono" class="form-control"><%= @teacher.telefonoProfesor %></textarea>
  </div>
  <div class="form-group">
    <label>Cédula</label>
    <textarea name="cedula" class="form-control"><%= @teacher.cedulaProfesor %></textarea>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/teachers" class="btn btn-default">Cancelar</a>
</form>
