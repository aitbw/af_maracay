<form action="/dashboard/students/new_student" method="POST">
  <div class="form-group">
    <label><%= I18n.t('students.labels.section') %></label>
    <select name="student[section_id]" class="form-control">
      <option value="" selected><%= I18n.t('students.data.options.default') %></option>
      <% @sections.each do |section| %>
        <option value="<%= section.section_id %>"><%= section.section_code %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label><%= I18n.t('students.labels.id') %></label>
    <input type="text" class="form-control" name="student[student_cedula]" placeholder="<%= I18n.t('students.labels.id') %>">
  </div>

  <div class="form-group">
    <label><%= I18n.t('students.labels.name') %></label>
    <input type="text" class="form-control" name="student[student_name]" placeholder="<%= I18n.t('students.labels.name') %>">
  </div>

  <div class="form-group">
    <label><%= I18n.t('students.labels.phone_number') %></label>
    <input type="text" class="form-control" name="student[student_phone]" placeholder="XXXX-XXXXXXX">
  </div>

  <div class="form-group">
    <label><%= I18n.t('students.labels.alt_phone_number') %></label>
    <input type="text" class="form-control" name="student[alternative_phone]" placeholder="XXXX-XXXXXXX">
  </div>

  <div class="form-group">
    <label><%= I18n.t('students.labels.email') %></label>
    <input type="text" class="form-control" name="student[student_email]" placeholder="<%= I18n.t('students.labels.email') %>">
  </div>

  <div class="form-group">
    <label><%= I18n.t('students.labels.assign_scholarship') %></label>
    <label class="radio-inline">
      <input type="radio" name="student[has_scholarship]" value="true"><%= I18n.t('students.data.has_scholarship.assigned') %>
    </label>
    <label class="radio-inline">
      <input type="radio" name="student[has_scholarship]" value="false" checked><%= I18n.t('students.data.has_scholarship.non_assigned') %>
    </label>
  </div>

  <button type="submit" class="btn btn-success"><%= I18n.t('students.buttons.new_student') %></button>
  <a href="/dashboard/students" class="btn btn-default"><%= I18n.t('students.buttons.cancel') %></a>
</form>
