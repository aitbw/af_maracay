<form action="/dashboard/students/new_student" method="POST">
  <div class="form-group">
    <label>Sección</label>
    <select name="student[section_id]" class="form-control">
      <option value="" selected>Seleccione una sección</option>
      <% @sections.each do |section| %>
        <option value="<%= section.section_id %>"><%= section.section_code %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label>Cédula</label>
    <input type="text" class="form-control" name="student[student_cedula]" placeholder="Cédula">
  </div>

  <div class="form-group">
    <label>Nombre</label>
    <input type="text" class="form-control" name="student[student_name]" placeholder="Nombre">
  </div>

  <div class="form-group">
    <label>Teléfono</label>
    <input type="text" class="form-control" name="student[student_phone]" placeholder="XXXX-XXXXXXX">
  </div>

  <div class="form-group">
    <label>Teléfono alterno</label>
    <input type="text" class="form-control" name="student[alternative_phone]" placeholder="XXXX-XXXXXXX">
  </div>

  <div class="form-group">
    <label>Correo</label>
    <input type="text" class="form-control" name="student[student_email]" placeholder="Correo">
  </div>

  <div class="form-group">
    <label>¿Asignar beca?</label>
    <label class="radio-inline">
      <input type="radio" name="student[has_scholarship]" value="true">Sí
    </label>
    <label class="radio-inline">
      <input type="radio" name="student[has_scholarship]" value="false" checked>No
    </label>
  </div>

  <button type="submit" class="btn btn-success">Registrar estudiante</button>
  <a href="/dashboard/students" class="btn btn-default">Cancelar</a>
</form>
