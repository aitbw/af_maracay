<h3 align="center" style="padding-bottom:1%;">Estudiantes del nivel <%= @section.level_description %></h3>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col">Cédula</th>
      <th scope="col">Nombre</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Teléfono alternativo</th>
      <th scope="col">Correo</th>
      <th scope="col">¿Becado?</th>
    </tr>
  </thead>
  <tbody>
    <% @section_students.each do |student| %>
      <tr>
        <td><%= student.student_cedula %></td>
        <td><%= h(student.student_name) %></td>
        <td><%= student.student_phone %></td>
        <td><%= student.alternative_phone %></td>
        <td><%= student.student_email %></td>
        <% if student.has_scholarship == true %>
          <td>Sí</td>
        <% else %>
          <td>No</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @section_students.size > 10 %>
  <div class="pagination">
    <%= will_paginate @section_students, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  </div>
<% end %>

<a href="/dashboard/courses/<%= params[:course] %>/sections" class="btn btn-default">Atrás</a>
