<h3 align="center" style="padding-bottom:1%;">Estudiantes del curso <%= @course.course_code %></h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Correo</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Teléfono alterno</th>
      <th scope="col">Cédula</th>
    </tr>
  </thead>
  <tbody>
    <% @course.students.each do |student| %>
      <tr>
        <td><%= h(student.student_name) %></td>
        <td><%= student.student_email %></td>
        <td><%= student.student_phone %></td>
        <td><%= student.alt_phone %></td>
        <td><%= student.student_cedula %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @course.students.size > 10 %>
  <div class="pagination">
    <%= will_paginate @course.students, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  </div>
<% end %>

<a href="/dashboard/courses" class="btn btn-default">Atrás</a>
