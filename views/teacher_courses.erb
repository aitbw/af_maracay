<h3 align="center" style="padding-bottom:1%;">Cursos asignados — <%= h(@teacher.teacher_name) %></h3>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col">Código</th>
      <th scope="col">Modalidad</th>
      <th scope="col">Nivel</th>
      <th scope="col">Inicio de curso</th>
      <th scope="col">Fin de curso</th>
      <th scope="col">Horas académicas</th>
      <th scope="col">Horas cubiertas</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_code %></td>
        <td><%= course.course_modality %></td>
        <td><%= course.course_level %></td>
        <td><%= course.start_date.strftime('%d/%m/%Y') %></td>
        <td><%= course.completion_date.strftime('%d/%m/%Y') %></td>
        <td><%= course.course_hours %></td>
        <td><%= course.hours_covered %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones<span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/dashboard/teachers/<%= @teacher.teacher_id %>/courses/<%= course.course_id %>/remove_teacher">Remover profesor del curso</a></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="/dashboard/teachers/<%= @teacher.teacher_id %>/courses/assign" class="btn btn-success">Asignar nuevo curso</a>
<a href="/dashboard/teachers" class="btn btn-default">Atrás</a>
