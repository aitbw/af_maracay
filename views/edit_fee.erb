<form action="/dashboard/students/<%= @fee.student_id %>/fees/<%= @fee.fee_id %>/edit" method="POST">
    <div class="form-group">
      <label>Monto de cuota (BsF.)</label>
      <textarea name="form[fee_amount]" class="form-control"><%= @fee.fee_amount %></textarea>
    </div>
    <div class="form-group">
      <label>Método de pago</label>
      <select name="form[payment_type]" id="paymentType" class="form-control">
        <% ["Débito", "Depósito", "Transferencia", "Crédito"].each do |method| %>
        <option <%= "selected" if method == @fee.payment_type %> value="<%= method %>" disabled><%= method %></option>
        <% end %>
      </select>
    </div>
    <% if @fee.payment_type == 'Transferencia' %>
    <div class="form-group">
      <label>Banco</label>
      <select name="form[bank]" class="form-control">
        <% @banks.each do |bank| %>
        <option <%= "selected" if bank.bank_name == @fee.bank %> value="<%= bank.bank_name %>" disabled><%=h bank.bank_name %></option>
        <% end %>
      </select>
    </div>
    <% end %>
    <div class="form-group">
      <label>Número de referencia</label>
      <textarea name="form[reference_number]" class="form-control"><%=h @fee.reference_number %></textarea>
    </div>
    <input type="hidden" name="_method" value="PUT">
    <button type="submit" class="btn btn-success">Actualizar</button>
    <a href="/dashboard/students/<%= @fee.student_id %>/fees" class="btn btn-default">Cancelar</a>
</form>
