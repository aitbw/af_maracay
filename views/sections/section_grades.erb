<h3 align="center" style="padding-bottom:1%;"><%= I18n.t('grades.page_titles.section_grades', level: @section.level_description) %></h3>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col"><%= I18n.t('grades.labels.student') %></th>
      <th scope="col"><%= I18n.t('grades.labels.final_grade') %></th>
      <th scope="col"><%= I18n.t('grades.labels.date_assigned') %></th>
    </tr>
  </thead>
  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_name %></td>
        <td><%= grade.final_grade %></td>
        <td><%= I18n.l(grade.date_assigned) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @grades.size > 10 %>
  <div class="pagination">
    <%= will_paginate @grades, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  </div>
<% end %>

<a href="/dashboard/courses/<%= params[:course] %>/sections" class="btn btn-default"><%= I18n.t('grades.buttons.back') %></a>
