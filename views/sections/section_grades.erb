<h3 align="center" style="padding-bottom:1%;">Calificaciones — <%= @section.level_description %></h3>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col">Estudiante</th>
      <th scope="col">Calificación final</th>
      <th scope="col">Fecha de emisión</th>
    </tr>
  </thead>
  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_name %></td>
        <td><%= grade.final_grade %></td>
        <td><%= grade.date_assigned.strftime('%d/%m/%Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @grades.size > 10 %>
  <div class="pagination">
    <%= will_paginate @grades, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  </div>
<% end %>

<a href="/dashboard/courses/<%= params[:course] %>/sections" class="btn btn-default">Atrás</a>
