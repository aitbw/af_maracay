<form action="/dashboard/courses/<%= params[:id] %>/sections/new" method="POST">
  <div class="form-group">
    <label><%= I18n.t('sections.labels.level') %></label>
    <select name="section[level_id]" class="form-control">
      <option value="" selected><%= I18n.t('sections.data.levels.default') %></option>
      <% @levels.each do |level| %>
        <option value="<%= level.level_id %>"><%= level.level_description %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label><%= I18n.t('sections.labels.capacity') %></label>
    <input type="text" class="form-control" name="section[section_capacity]" placeholder="XXXX">
  </div>

  <div class="form-group">
    <label><%= I18n.t('sections.labels.start_date') %></label>
      <div class="input-group date" id="leftDatePicker">
      <input type="text" class="form-control" name="section[start_date]">
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label><%= I18n.t('sections.labels.end_date') %></label>
      <div class="input-group date" id="rightDatePicker">
      <input type="text" class="form-control" name="section[end_date]">
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label><%= I18n.t('sections.labels.section_hours') %></label>
    <input type="text" class="form-control" name="section[section_hours]" placeholder="XXXX">
  </div>

  <button type="submit" class="btn btn-success"><%= I18n.t('sections.buttons.new_section') %></button>
  <a href="/dashboard/courses/<%= params[:id] %>/sections" class="btn btn-default"><%= I18n.t('sections.buttons.cancel') %></a>
</form>
