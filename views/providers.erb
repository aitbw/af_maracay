<div>
  <form class="form-inline" action="/dashboard/providers" method="GET">
    <div class="form-group">
      <input class="form-control" name="provider_name" placeholder="Buscar por nombre" value="<%= params[:provider_name] %>">
    </div>
    <a href="/dashboard/providers/new_provider" class="btn btn-success">Nuevo proveedor</a>
  </form>

  <br />

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">RIF</th>
        <th scope="col">Tel√©fono</th>
        <th scope="col">Correo</th>
        <th scope="col">Encargado</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @providers.each do |provider| %>
        <tr>
          <td><%= h(provider.provider_name) %></td>
          <td><%= provider.provider_rif %></td>
          <td><%= provider.provider_phone %></td>
          <td><%= provider.provider_email %></td>
          <td><%= h(provider.manager) %></td>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones<span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><a href="/dashboard/providers/<%= provider.provider_id %>/delete">Eliminar</a></li>
                <li><a href="/dashboard/providers/<%= provider.provider_id %>/edit">Modificar</a></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination">
  <%= will_paginate @providers, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  <%= "<a href=\"/dashboard/providers\">Volver</a>" if params[:provider_name] %>
</div>
