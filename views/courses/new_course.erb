<form action="/dashboard/courses/new_course" method="POST">
  <div class="form-group">
    <label><%= I18n.t('courses.labels.code') %></label>
    <input type="text" class="form-control" name="course[course_code]" placeholder="XXXX-XXXXX-XXX">
  </div>

  <div class="form-group">
    <label><%= I18n.t('courses.labels.modality') %></label>
    <select name="course[course_type_id]" class="form-control">
      <option value="" selected><%= I18n.t('courses.data.modalities.default') %></option>
        <% @types.each do |type| %>
        <option value="<%= type.course_type_id %>"><%= type.course_modality %></option>
        <% end %>
    </select>
  </div>

  <div class="form-group">
    <label><%= I18n.t('courses.labels.office') %></label>
    <select name="course[office_id]" class="form-control">
      <option value="" selected><%= I18n.t('courses.data.offices.default') %></option>
      <% @offices.each do |office| %>
        <option value="<%= office.office_id %>"><%= office.office_name %></option>
      <% end %>
    </select>
  </div>

  <button type="submit" class="btn btn-success"><%= I18n.t('courses.buttons.new_course') %></button>
  <a href="/dashboard/courses" class="btn btn-default"><%= I18n.t('courses.buttons.cancel') %></a>
</form>
