<h3 align="center" style="padding-bottom:1%;">Inscripciones — <%= h(@student.student_name) %></h3>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col">Emisor</th>
      <th scope="col">Monto cancelado</th>
      <th scope="col">Método de pago</th>
      <th scope="col">Estado</th>
      <th scope="col">Fecha de emisión</th>
      <th scope="col">Fecha de expiración</th>
      <th scope="col">Banco</th>
      <th scope="col">Número de referencia</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @signups.each do |signup| %>
      <tr>
        <td><%= h(signup.user_name) %></td>
        <td><%= signup.payment_amount %> BsF.</td>
        <td><%= signup.payment_method %></td>
        <td><%= signup.payment_status %></td>
        <td><%= signup.issue_date.strftime('%d/%m/%Y') %></td>
        <td><%= signup.expiration_date.strftime('%d/%m/%Y') %></td>
        <td><%= signup.bank.empty? ? "N/A" : "<%= signup.bank %>" %></td>
        <td><%= signup.payment_method == "Efectivo" ? "N/A" : "<%= h(signup.reference_number) %>" %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones<span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/dashboard/students/<%= signup.student_id %>/signups/<%= signup.payment_id %>/delete">Eliminar</a></li>
              <li><a href="/dashboard/students/<%= signup.student_id %>/signups/<%= signup.payment_id %>/edit">Modificar</a></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @signups.size > 10 %>
  <div class="pagination">
    <%= will_paginate @signups, container: false, previous_label: "&laquo", next_label: "&raquo" %>
  </div>
<% end %>

<% if @signups.empty? || Date.today >= @signups.first.expiration_date %>
  <a href="/dashboard/students/<%= @student.student_id %>/signups/new" class="btn btn-success">Nueva inscripción</a>
<% end %>
<a href="/dashboard/students" class="btn btn-default">Atrás</a>
