<form id="actualizar" action="/edit_student/<%= @id_estudiante %>" method="POST">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="text-danger"><%= flash[:error] %></p>
  <% end %>
  <div class="form-group">
    <label>Nombre</label>
    <textarea name="nombre" class="form-control"><%= @estudiante.nombreEstudiante %></textarea>
  </div>
  <div class="form-group">
    <label>Correo</label>
    <textarea name="correo" class="form-control"><%= @estudiante.correoEstudiante %></textarea>
  </div>
  <div class="form-group">
    <label>Teléfono</label>
    <textarea name="telefono" class="form-control"><%= @estudiante.telefonoEstudiante %></textarea>
  </div>
  <div class="form-group">
    <label>Cédula</label>
    <textarea name="cedula" class="form-control"><%= @estudiante.cedulaEstudiante %></textarea>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/dashboard/students" class="btn btn-default">Cancelar</a>
</form>
