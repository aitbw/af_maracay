<form id="registro" action="/dashboard/courses/new_course" method="POST">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="text-danger"><%= flash[:error] %></p>
  <% end %>
  <div class="form-group">
  <label>Tipo</label>
  <select name="tipo" class="form-control">
    <% @tipos.each do |tipo| %>
    <option value="<%= tipo.idTipoCurso %>"><%= tipo.tipoCurso %></option>
    <% end %>
  </select>
  </div>
  <div class="form-group">
  <label>Sede</label>
  <select name="sede" class="form-control">
    <% @sedes.each do |sede| %>
    <option value="<%= sede.idSede %>"><%= sede.nombreSede %></option>
    <% end %>
  </select>
  </div>
  <div class="form-group">
    <label>Código</label>
    <input type="text" class="form-control" name="codigo" placeholder="XX XX XX">
  </div>
  <div class="form-group">
    <label>Nivel</label>
    <input type="text" class="form-control" name="nivel" placeholder="XX-X">
  </div>
  <div class="form-group">
    <label>Capacidad</label>
    <input type="text" class="form-control" name="capacidad" placeholder="Capacidad">
  </div>
  <div class="form-group">
    <label>Fecha de inicio</label>
      <div class="input-group date" id="fechaizq">
        <input type="text" class="form-control" name="inicio">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
      </div>
  </div>
  <div class="form-group">
    <label>Fecha de culminación</label>
      <div class="input-group date" id="fechader">
        <input type="text" class="form-control" name="fin">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
      </div>
  </div>
  <div class="form-group">
    <label>Duración (Horas)</label>
    <input type="text" class="form-control" name="horas" placeholder="Horas">
  </div>
  <button type="submit" class="btn btn-success">Crear curso</button>
  <a href="/dashboard/courses" class="btn btn-default">Cancelar</a>
</form>
