<% if @user.user_id %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= I18n.t('users.page_titles.delete_user') %></h3>
    </div>

    <div class="panel-body">
      <p><%= I18n.t('users.messages.warnings.are_you_sure') %></p>
      <ol style="list-style-type:disc;">
        <li><b><%= I18n.t('users.labels.id') %></b>: <%= @user.user_cedula %></li>
        <li><b><%= I18n.t('users.labels.name') %></b>: <%= h(@user.user_name) %></li>
        <li><b><%= I18n.t('users.labels.role') %></b>: <%= @user.access_level %></li>
        <li><b><%= I18n.t('users.labels.account_status') %></b>: <%= @user.has_access ? I18n.t('users.account_status.unlocked') : I18n.t('users.account_status.locked') %></li>
      </ol>
      <b><p class="text-danger"><%= I18n.t('users.messages.warnings.related_records') %></p></b>

      <form action="/dashboard/users/<%= @user.user_id %>/delete" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger"><%= I18n.t('users.buttons.delete_user') %></button>
        <a href="/dashboard/users" class="btn btn-default"><%= I18n.t('users.buttons.cancel') %></a>
      </form>
    </div>
  </div>
<% end %>
