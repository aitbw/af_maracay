<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Curso</th>
      <th scope="col">Nombre</th>
      <th scope="col">Correo</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Cédula</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <% Course.where(course_id: student.course_id).select(:course_code).each do |course| %>
      <tr>
        <td><%=h course.course_code %></td>
        <td><%=h student.student_name %></td>
        <td><%=h student.student_email %></td>
        <td><%=h student.student_phone %></td>
        <td><%=h student.student_cedula %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones<span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/dashboard/students/<%= student.student_id %>/grades">Calificaciones</a></li>
              <li><a href="/dashboard/students/<%= student.student_id %>/fees">Cuotas</a></li>
              <li><a href="/dashboard/students/<%= student.student_id %>/delete">Eliminar</a></li>
              <li><a href="/dashboard/students/<%= student.student_id %>/signups">Inscripciones</a></li>
              <li><a href="/dashboard/students/<%= student.student_id %>/edit">Modificar</a></li>
              <li><a href="/dashboard/students/<%= student.student_id %>/reassign">Reasignar</a></li>
            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<a href="/dashboard/students/new_student" class="btn btn-success">Nuevo estudiante</a>
